{
  "name": "video-intro-adder",
  "version": "1.0.0",
  "description": "批量为视频添加片头工具 - 专为字幕组设计",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YuJiaoChiu/video-intro-adder.git"
  },
  "keywords": [
    "video",
    "intro",
    "ffmpeg",
    "subtitle",
    "batch"
  ],
  "author": "YuJiaoChiu",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.2"
  },
  "build": {
    "appId": "com.subtitle.video-intro-adder",
    "productName": "VideoIntroAdder",
    "copyright": "Copyright © 2024",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.video"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Video"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
